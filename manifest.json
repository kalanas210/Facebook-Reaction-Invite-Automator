{
    "manifest_version": 3,
    "name": "FB Reaction Invite Automator",
    "version": "2.1.0",
    "description": "Automate Facebook reaction invites efficiently with smart features, auto-scrolling, and configurable speed settings.",
    "author": "Kalana Sandakelum",
    "permissions": ["scripting", "storage", "activeTab", "alarms"],
    "host_permissions": ["https://www.facebook.com/*", "https://facebook.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_title": "FB Invite Automator",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.facebook.com/*", "https://facebook.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  